<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:osgix="http://www.springframework.org/schema/osgi-compendium"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/osgi-compendium 
       http://www.springframework.org/schema/osgi-compendium/spring-osgi-compendium.xsd">

	<osgix:cm-properties id="coin-properties" persistent-id="pl.cyfronet.coins">
		<prop key="port">9099</prop>

		<prop key="air.url"></prop>
		<prop key="air.username"></prop>
		<prop key="air.password"></prop>

		<prop key="mi.url"></prop>

		<prop key="default.cloud.site.id">cyfronet-folsom</prop>
		<prop key="default.workflow.priority">40</prop>

		<prop key="secret"></prop>
	</osgix:cm-properties>

	<osgix:cm-properties id="as-sec" persistent-id="pl.cyfronet.coins.ascredentials">
	</osgix:cm-properties>

	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="ignoreUnresolvablePlaceholders" value="true" />
		<property name="propertiesArray">
			<ref bean="coin-properties" />
		</property>
	</bean>
</beans>