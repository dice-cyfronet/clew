<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jaxrs="http://cxf.apache.org/jaxrs" 
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://cxf.apache.org/jaxrs 
       http://cxf.apache.org/schemas/jaxrs.xsd
       http://www.springframework.org/schema/util
       http://www.springframework.org/schema/util/spring-util.xsd
       ">

	<import resource="classpath:META-INF/cxf/cxf.xml" />	

    <!-- security policies -->

	<jaxrs:server id="roles-management-rs" address="http://0.0.0.0:${port}/securitypolicy">
		<jaxrs:serviceBeans>
			<ref bean="roles-management" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<ref bean="jsonProvider" />
			<ref bean="authenticationInterceptor" />
			<ref bean="authorizationInterceptor" />
		</jaxrs:providers>
	</jaxrs:server>	

	<jaxrs:server id="grants-rs" address="http://0.0.0.0:${port}/grant">
		<jaxrs:serviceBeans>
			<ref bean="grants-management" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<ref bean="jsonProvider" />
			<ref bean="authenticationInterceptor" />
			<ref bean="authorizationInterceptor" />
		</jaxrs:providers>
	</jaxrs:server>

	<bean name="roles-management" class="pl.cyfronet.coin.impl.SecurityPolicyServiceImpl">
		<property name="actionFactory" ref="actionFactory" />
	</bean>

	<bean name="grants-management" class="pl.cyfronet.coin.impl.GrantServiceImpl">
		<property name="actionFactory" ref="actionFactory" />
	</bean>
	
	
	<!-- keys management -->
	
	<jaxrs:server id="keys-management-rs" address="http://0.0.0.0:${port}/key">
		<jaxrs:serviceBeans>
			<ref bean="keys-management" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<ref bean="jsonProvider" />
			<ref bean="authenticationInterceptor" />
		</jaxrs:providers>
	</jaxrs:server>	

	<bean name="keys-management" class="pl.cyfronet.coin.impl.KeyManagementImpl">
		<property name="actionFactory" ref="actionFactory" />
		<property name="authenticator" ref="authenticationHandler" />
	</bean>

	<!-- workflow management -->

	<jaxrs:server id="workflow-management-rs" address="http://0.0.0.0:${port}/workflow">
		<jaxrs:serviceBeans>
			<ref bean="workflow-management" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<ref bean="jsonProvider" />
			<ref bean="authenticationInterceptor" />
			<ref bean="authorizationInterceptor" />
		</jaxrs:providers>
	</jaxrs:server>

	<bean name="workflow-management" class="pl.cyfronet.coin.impl.WorkflowManagementImpl">
		<property name="actionFactory" ref="actionFactory" />		
		<property name="authenticator" ref="authenticationHandler" />
	</bean>


    <!-- atomic services management -->

	<jaxrs:server id="coinRSEndpoint" address="http://0.0.0.0:${port}/as">
		<jaxrs:serviceBeans>
			<ref bean="cloudFacade" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<ref bean="jsonProvider" />
			<ref bean="authenticationInterceptor" />
			<ref bean="authorizationInterceptor" />
		</jaxrs:providers>
	</jaxrs:server>

	<bean name="cloudFacade" class="pl.cyfronet.coin.impl.CloudFacadeImpl">
		<property name="coinBaseUrl" value="${coinBaseUrl}" />
		<property name="actionFactory" ref="actionFactory" />
		<property name="authenticator" ref="authenticationHandler" />
	</bean>


    <!-- documentation service -->

	<jaxrs:server id="documentationRSEndpoint" address="http://0.0.0.0:${port}">
		<jaxrs:serviceBeans>
			<ref bean="documentationService" />
		</jaxrs:serviceBeans>
	</jaxrs:server>

	<bean id="documentationService" class="pl.cyfronet.coin.impl.DocumentationServiceImpl" />
</beans>
