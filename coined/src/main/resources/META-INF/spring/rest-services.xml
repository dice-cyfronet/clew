<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jaxrs="http://cxf.apache.org/jaxrs" 
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://cxf.apache.org/jaxrs 
       http://cxf.apache.org/schemas/jaxrs.xsd
       http://www.springframework.org/schema/util
       http://www.springframework.org/schema/util/spring-util.xsd
       ">

	<import resource="classpath:META-INF/cxf/cxf.xml" />	

	<jaxrs:server id="roles-management-rs" address="http://0.0.0.0:${port}/securitypolicy">
		<jaxrs:serviceBeans>
			<ref bean="roles-management" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<ref bean="roles-managementProvider" />
		</jaxrs:providers>
	</jaxrs:server>

	<bean id="roles-managementProvider" class="org.codehaus.jackson.jaxrs.JacksonJsonProvider"/>

	<bean name="roles-management" class="pl.cyfronet.coin.impl.SecurityPolicyServiceImpl">
		<property name="actionFactory" ref="actionFactory" />
	</bean>

	<jaxrs:server id="workflow-management-rs" address="http://0.0.0.0:${port}/workflow">
		<jaxrs:serviceBeans>
			<ref bean="workflow-management" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<ref bean="jsonProvider" />
			<ref bean="authenticationInterceptor" />
		</jaxrs:providers>
	</jaxrs:server>

	<bean name="workflow-management" class="pl.cyfronet.coin.impl.WorkflowManagementImpl">
		<property name="actionFactory" ref="actionFactory" />		
		<property name="authenticator" ref="authenticationHandler" />
	</bean>

	<jaxrs:server id="coinRSEndpoint" address="http://0.0.0.0:${port}/as">
		<jaxrs:serviceBeans>
			<ref bean="cloudFacade" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<ref bean="jsonProvider" />
			<ref bean="authenticationInterceptor" />
		</jaxrs:providers>
	</jaxrs:server>

	<bean name="cloudFacade" class="pl.cyfronet.coin.impl.CloudFacadeImpl">
		<property name="coinBaseUrl" value="${coinBaseUrl}" />
		<property name="actionFactory" ref="actionFactory" />
		<property name="authenticator" ref="authenticationHandler" />
	</bean>

	<jaxrs:server id="documentationRSEndpoint" address="http://0.0.0.0:${port}">
		<jaxrs:serviceBeans>
			<ref bean="documentationService" />
		</jaxrs:serviceBeans>
	</jaxrs:server>

	<bean id="documentationService" class="pl.cyfronet.coin.impl.DocumentationServiceImpl" />

	<bean id="jsonProvider" class="org.apache.cxf.jaxrs.provider.JSONProvider">
		<property name="namespaceMap" ref="jsonNamespaceMap" />
		<property name="serializeAsArray" value="true" />
		<property name="dropRootElement" value="true" />
		<property name="supportUnwrapped" value="true" />
		<property name="wrapperMap">
			<map>
				<entry>
					<key>
						<value>pl.cyfronet.coin.api.beans.WorkflowStartRequest</value>
					</key>
					<value>workflowStartRequest</value>
				</entry>
			</map>
		</property>
	</bean>

	<util:map id="jsonNamespaceMap" map-class="java.util.Hashtable" />
</beans>