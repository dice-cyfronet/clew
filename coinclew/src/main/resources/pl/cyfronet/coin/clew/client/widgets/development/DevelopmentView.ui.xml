<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
		xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:with type="pl.cyfronet.coin.clew.client.widgets.development.DevelopmentMessages" field="messages"/>
	<ui:style>
		.header {
			font-size: 1.4em;
			padding-bottom: 10px;
			padding-top: 30px;
		}
		.actions {
			margin-top: 30px;
		}
		.action {
			margin-right: 20px;
		}
		.container {
			text-align: center;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HTML addStyleNames="{style.header}"><ui:text from="{messages.cloudAtomicServicesLabel}"/></g:HTML>
		<g:FlowPanel ui:field="atomicServicesContainer" addStyleNames="{style.container}"/>
		<g:HTML addStyleNames="{style.header}"><ui:text from="{messages.runningDevInstanceLabel}"/></g:HTML>
		<g:FlowPanel ui:field="runningInstancesContainer" addStyleNames="{style.container}"/>
		<g:FlowPanel addStyleNames="{style.actions}">
			<b:Button ui:field="startDevInstance" type="SUCCESS" addStyleNames="{style.action}" enabled="false"><ui:text from="{messages.startDevInstanceButtonLabel}"/></b:Button>
			<b:Button ui:field="manageUserKeys" addStyleNames="{style.action}"><ui:text from="{messages.manageUserKeysButtonLabel}"/></b:Button>
		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder>