<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
		xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	<ui:with type="pl.cyfronet.coin.clew.client.widgets.initialconfig.InitialConfigMessages" field="messages"/>
	<ui:style type="pl.cyfronet.coin.clew.client.widgets.initialconfig.InitialConfigView.Styles">
		.name {
			text-align: left;
			float: left;
			width: 30%;
			word-wrap: break-word;
		}
		.container {
			float: left;
			width: 100%;
			padding: 5px 0px;
		}
		.container:not\(:last-child\) {
			border-bottom: solid 1px;
			border-color: #dddddd;
		}
		.actions {
			float:left;
			width: 20%;
			text-align: right;
		}
		.params {
			float: left;
			width: 50%;
			text-align: left;
		}
		.param {
			margin-right: 5px;
			margin-top: 3px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.container}">
		<g:HTML ui:field="name" addStyleNames="{style.name}"/>
		<g:FlowPanel ui:field="parameters" addStyleNames="{style.params}"/>
		<g:FlowPanel addStyleNames="{style.actions}">
			<b:ButtonGroup>
				<b:Button ui:field="edit" icon="PENCIL" size="EXTRA_SMALL" dataToggle="BUTTON" title="{messages.editTooltip}" />
				<b:Button ui:field="remove" icon="TIMES" size="EXTRA_SMALL" type="DANGER" dataLoadingText="&lt;i class='icon-spinner icon-spin'&gt;&lt;/i&gt;" title="{messages.removeTooltip}"/>
			</b:ButtonGroup>
		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder>