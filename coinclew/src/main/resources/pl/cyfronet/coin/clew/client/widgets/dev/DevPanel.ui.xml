<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
		xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:with type="pl.cyfronet.coin.clew.client.widgets.dev.DevMessages" field="messages" />
	<ui:style>
		
	</ui:style>
	<g:HTMLPanel>
		<b:Button ui:field="showNewApplianceTypeModal" type="SUCCESS"><ui:text from="{messages.showApplianceTypeModalButtonLabel}"/></b:Button>
		<g:HTMLPanel ui:field="applianceTypeList"/>
		<b:Modal ui:field="addApplianceTypeModal"  title="{messages.newApplianceTypeDetailsHeader}" animation="true">
			<b:Form type="HORIZONTAL">
				<b:Fieldset>
					<b:ControlGroup>
						<b:ControlLabel for="applianceTypeName"><ui:text from="{messages.applianceTypeNameLabel}"/></b:ControlLabel>
						<b:Controls>
							<b:TextBox ui:field="applianceTypeName" b:id="applianceTypeName"></b:TextBox>
						</b:Controls>
					</b:ControlGroup>
					<b:ControlGroup>
						<b:ControlLabel for="applianceTypeDescription"><ui:text from="{messages.applianceTypeDescriptionLabel}"/></b:ControlLabel>
						<b:Controls>
							<b:TextArea ui:field="applianceTypeDescription" b:id="applianceTypeDescription"></b:TextArea>
						</b:Controls>
					</b:ControlGroup>
				</b:Fieldset>
			</b:Form>
			<b:ModalFooter>
				<b:Button ui:field="addApplianceType" type="SUCCESS" icon="PLUS"><ui:text from="{messages.addNewApplianceTypeButtonLabel}"/></b:Button>
			</b:ModalFooter>
		</b:Modal>
	</g:HTMLPanel>
</ui:UiBinder>