<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
		xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:with type="pl.cyfronet.coin.clew.client.widgets.dashboard.DashboardMessages" field="messages" />
	<ui:style>
		.right {
			float: right;
		}
		.clear {
			clear: both;
		}
		.center {
			text-align: center;
		}
	</ui:style>
	<g:HTMLPanel>
		<b:TabPanel>
			<b:Tab heading="Applications" active="true">
				<b:Button ui:field="showStartAppModal" icon="PLAY" type="SUCCESS"><ui:text from="{messages.startNewAppButtonLabel}"/></b:Button>
				<g:FlexTable ui:field="instances" styleName="table table-condensed"/>
			</b:Tab>
			<b:Tab heading="Workflows">
			</b:Tab>
		</b:TabPanel>
		<b:Modal ui:field="startAppPopup" title="{messages.startNewAppPopupHeader}" animation="true">
			<g:HTMLPanel>
				<b:TextBox ui:field="filterAppsBox" placeholder="{messages.filterBoxPlaceholderLabel}" addStyleNames="{style.right}"/>
			</g:HTMLPanel>
			<g:HTMLPanel addStyleNames="{style.clear} {style.center}">
				<b:Icon ui:field="appListSpinner" type="SPINNER" visible="false"/>
				<g:FlexTable ui:field="appsTable" styleName="table table-striped table-condensed"/>
			</g:HTMLPanel>
			<b:ModalFooter>
				<b:Button ui:field="startSelectedApps" type="PRIMARY" icon="PLAY"><ui:text from="{messages.startSelectedAppsButtonLabel}"/></b:Button>
			</b:ModalFooter>
		</b:Modal>
	</g:HTMLPanel>
</ui:UiBinder>