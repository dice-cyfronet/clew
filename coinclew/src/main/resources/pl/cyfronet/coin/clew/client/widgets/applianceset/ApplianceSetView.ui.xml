<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
		xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	<ui:with type="pl.cyfronet.coin.clew.client.widgets.applianceset.ApplianceSetMessages" field="messages"/>
	<ui:style>
		.left {
			text-align: left;
		}
		.right {
			text-align: right;
		}
		.name {
			font-weight: bold;
			font-size: 1.2em;
		}
	</ui:style>
	<g:FlowPanel>
		<b:Row>
			<b:Column size="4">
				<g:HTML ui:field="name" addStyleNames="{style.left} {style.name}"/>
			</b:Column>
			<b:Column size="8" addStyleNames="{style.right}">
				<b:Button ui:field="shutdown" type="DANGER" icon="POWER_OFF"  size="EXTRA_SMALL" dataLoadingText="&lt;i class='icon-spinner icon-spin'&gt;&lt;/i&gt;"></b:Button>
			</b:Column>
		</b:Row>
		<g:FlowPanel ui:field="instancesContainer"/>
	</g:FlowPanel>
</ui:UiBinder>