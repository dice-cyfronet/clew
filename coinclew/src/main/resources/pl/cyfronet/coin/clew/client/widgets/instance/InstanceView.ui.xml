<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
		xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:with type="pl.cyfronet.coin.clew.client.widgets.instance.InstanceMessages" field="messages"/>
	<ui:style type="pl.cyfronet.coin.clew.client.widgets.instance.InstanceView.Styles">
		.spacey-row {
			padding-top: 10px;
			padding-bottom: 10px;
		}
		.right {
			text-align: right;
		}
		.left {
			text-align: left;
		}
		.details-header {
			font-size: 1.2em;
			text-align: left;
			padding-top: 10px;
			padding-bottom: 10px;
			padding-left: 20px;
		}
		.details {
			float: left;
			width: 100%;
		}
		.anchor {
			display: inline;
			margin-left: 10px;
		}
		.descriptor {
			float: right;
		}
		.service {
			margin-top: 5px;
			text-align: left;
		}
		.name {
			float: left;
			font-weight: bold;
			width: 30%;
			text-align: left;
		}
		.spec {
			float: left;
			width: 20%;
			text-align: left;
		}
		.ip {
			float: left;
			width: 20%;
			text-align: left;
		}
		.location {
			float: left;
			width: 20%;
			text-align: left;
		}
		.status {
			float: left;
			width: 20%;
			text-align: left;
		}
		.actions {
			float: left;
			width: 10%;
			text-align: right;
		}
		.container {
			padding-left: 20px;
		}
		.panel {
			float: left;
			width: 100%;
			padding: 10px 0px;
		}
		.panel:hover {
			background-color: #F5F5F5;
		}
		.full-width {
			float: left;
			width: 100%;
		}
		.detailsName {
			font-weight: bold;
			text-align: left;
			padding-left: 30px;
		}
	</ui:style>
	<g:FlowPanel addStyleNames="{style.panel}">
		<g:HTML ui:field="name" addStyleNames="{style.name}">&nbsp;</g:HTML>
		<!-- <g:HTML ui:field="spec" addStyleNames="{style.spec}">&nbsp;</g:HTML> -->
		<g:HTML ui:field="ip" addStyleNames="{style.ip}">&nbsp;</g:HTML>
		<g:HTML ui:field="location" addStyleNames="{style.location}">&nbsp;</g:HTML>
		<g:HTML ui:field="status" addStyleNames="{style.status}">&nbsp;</g:HTML>
		<g:FlowPanel addStyleNames="{style.actions}">
			<b:ButtonGroup ui:field="controls">
				<b:Button ui:field="showDetails" icon="REORDER" type="INFO" size="MINI" toggle="true" title="{messages.detailsTooltip}"/>
			</b:ButtonGroup>
		</g:FlowPanel>
		<b:Collapse ui:field="collapse" defaultOpen="false">
			<g:FlowPanel addStyleNames="{style.details}">
				<g:HTML ui:field="accessInfoLabel" addStyleNames="{style.details-header}" visible="false"><ui:text from="{messages.accessInfoLabel}"/></g:HTML>
				<g:FlowPanel ui:field="accessInfoContainer" addStyleNames="{style.container}" visible="false"/>
				<g:HTML addStyleNames="{style.details-header}"><ui:text from="{messages.webApplicationsLabel}"/></g:HTML>
				<g:FlowPanel ui:field="webApplicationsContainer" addStyleNames="{style.container}"/>
				<g:HTML addStyleNames="{style.details-header}"><ui:text from="{messages.restApplicationsLabel}"/></g:HTML>
				<g:FlowPanel ui:field="serviceContainer" addStyleNames="{style.container}"/>
			</g:FlowPanel>
		</b:Collapse>
	</g:FlowPanel>
</ui:UiBinder>