<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
		xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:with type="pl.cyfronet.coin.clew.client.widgets.instance.InstanceMessages" field="messages"/>
	<ui:style type="pl.cyfronet.coin.clew.client.widgets.instance.InstanceView.Styles">
		.spacey-row {
			padding-top: 10px;
			padding-bottom: 10px;
		}
		.right {
			text-align: right;
		}
		.left {
			text-align: left;
		}
		.details-header {
			font-size: 1.2em;
			text-align: left;
			padding-top: 10px;
			padding-bottom: 10px;
		}
		.details {
			margin-left: 50px;
		}
		.anchor {
			float: left;
			margin-right: 10px;
		}
		.descriptor {
			float: right;
		}
		.service {
			float: left;
			width: 100%;
			margin-top: 5px;
		}
		.name {
			float: left;
			margin-right: 10px;
			font-weight: bold;
		}
	</ui:style>
	<g:FlowPanel>
		<b:Row addStyleNames="{style.spacey-row}">
			<b:Column size="2">
				<g:HTML ui:field="name" addStyleNames="{style.left}"/>
			</b:Column>
			<b:Column size="3">
				<g:HTML ui:field="spec" addStyleNames="{style.left}"/>
			</b:Column>
			<b:Column size="2">
				<g:HTML ui:field="ip" addStyleNames="{style.left}"/>
			</b:Column>
			<b:Column size="2">
				<g:HTML ui:field="location" addStyleNames="{style.left}"/>
			</b:Column>
			<b:Column size="2">
				<g:HTML ui:field="status" addStyleNames="{style.left}"/>
			</b:Column>
			<b:Column size="1" addStyleNames="{style.right}">
				<b:ButtonGroup ui:field="controls">
					<b:Button ui:field="showDetails" icon="REORDER" type="WARNING" size="MINI" toggle="true" title="{messages.detailsTooltip}"/>
				</b:ButtonGroup>
			</b:Column>
		</b:Row>
		<b:Collapse ui:field="collapse" defaultOpen="false">
			<g:FlowPanel addStyleNames="{style.details}">
				<g:HTML addStyleNames="{style.details-header}"><ui:text from="{messages.webApplicationsLabel}"/></g:HTML>
				<g:FlowPanel ui:field="webApplicationsContainer"/>
				<g:HTML addStyleNames="{style.details-header}"><ui:text from="{messages.restApplicationsLabel}"/></g:HTML>
				<g:FlowPanel ui:field="serviceContainer"/>
			</g:FlowPanel>
		</b:Collapse>
	</g:FlowPanel>
</ui:UiBinder>