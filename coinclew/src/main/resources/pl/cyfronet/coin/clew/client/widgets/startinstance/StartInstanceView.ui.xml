<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
		xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	<ui:with type="pl.cyfronet.coin.clew.client.widgets.startinstance.StartInstanceMessages" field="messages"/>
	<ui:style>
		.filter {
			text-align: right;
			float: right;
		}
		.modal {
			width: 1000px;
		}
		.title {
			float: left;
		}
		.clear {
			clear: both;
		}
	</ui:style>
	<b:Modal ui:field="startInstanceModal" closable="false" dataKeyboard="false" fade="true" dataBackdrop="STATIC">
		<b:ModalHeader>
			<g:HTMLPanel>
				<h3 ui:field="title" class="{style.title}"><ui:text from="{messages.startInstanceModalHeader}"/></h3>
				<g:HTMLPanel addStyleNames="{style.filter}">
					<b:TextBox ui:field="filterAppsBox" placeholder="{messages.filterBoxPlaceholderLabel}"/>
				</g:HTMLPanel>
				<g:FlowPanel addStyleNames="{style.clear}"/>
			</g:HTMLPanel>
		</b:ModalHeader>
		<b:ModalBody>
			<g:FlowPanel ui:field="applianceTypeContainer"/>
			<g:FlowPanel addStyleNames="{style.clear}"/>
		</b:ModalBody>
		<b:ModalFooter>
			<b:Button ui:field="startSelected" type="PRIMARY" icon="PLAY" dataLoadingText="&lt;i class='fa fa-spinner fa-spin'&gt;&lt;/i&gt; {messages.startselectedButtonLabel}"><ui:text from="{messages.startselectedButtonLabel}"/></b:Button>
			<b:Button ui:field="close"><ui:text from="{messages.closeButtonLabel}"/></b:Button>
		</b:ModalFooter>
	</b:Modal>
</ui:UiBinder>