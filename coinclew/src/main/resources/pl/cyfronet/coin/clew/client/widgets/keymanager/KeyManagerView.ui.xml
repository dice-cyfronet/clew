<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
		xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	<ui:with type="pl.cyfronet.coin.clew.client.widgets.keymanager.KeyManagerMessages" field="messages"/>
	<ui:style>
		.keys {
			text-align: center;
			margin-bottom: 20px;
			float: left;
			width: 100%;
		}
		.hidden {
			visibility: hidden;
		}
		.text-area {
			resize: none;
		}
		.help {
			margin-top: 10px;
		}
		.radio {
			float: left;
			margin-bottom: 10px;
		}
		.file {
			display: block;
			clear: both;
		}
		.label {
			margin-right: 10px;
		}
	</ui:style>
	<b:Modal ui:field="keyModal" title="{messages.keyManagerModalLabel}" closable="false" dataKeyboard="false" fade="true" dataBackdrop="STATIC">
		<b:ModalBody>
			<g:FlowPanel ui:field="keyContainer" addStyleNames="{style.keys}"/>
			<g:FlowPanel>
				<g:FormPanel ui:field="keyUploadForm" method="POST">
					<g:FlowPanel ui:field="formContainer">
						<b:FormGroup>
							<b:FormLabel><ui:text from="{messages.keyNameLabel}"/></b:FormLabel>
							<b:TextBox ui:field="keyName" name="user_key[name]" placeholder="{messages.keyNamePlaceholder}" addStyleNames="input-block-level"/>
						</b:FormGroup>
						<b:FormGroup>
							<b:Radio ui:field="keyCopiedRadio" name="keyContents" addStyleNames="{style.radio}" text="{messages.keyCopiedLabel}"/>
							<b:TextArea ui:field="keyPayload" placeholder="{messages.keyPayloadPlaceholder}" addStyleNames="input-block-level {style.text-area}"/>
						</b:FormGroup>
						<b:FormGroup>
							<b:Radio ui:field="keyFromFileRadio" name="keyContents" addStyleNames="{style.radio}" text="{messages.keyFromFileLabel}"/>
							<g:FileUpload ui:field="keyUpload" name="user_key[public_key]" enabled="false" addStyleNames="{style.file}"/>
							<b:HelpBlock addStyleNames="{style.help}"><ui:text from="{messages.keyHelp}"/></b:HelpBlock>
						</b:FormGroup>
					</g:FlowPanel>
				</g:FormPanel>
			</g:FlowPanel>
		</b:ModalBody>
		<b:ModalFooter>
			<b:Label ui:field="errorLabel" type="DANGER" addStyleNames="{style.hidden} {style.label}"/>
			<b:Button ui:field="uploadKey" icon="KEY" type="SUCCESS" dataLoadingText="&lt;i class='fa fa-spinner fa-spin'&gt;&lt;/i&gt; {messages.uploadKeyButtonLabel}"><ui:text from="{messages.uploadKeyButtonLabel}"/></b:Button>
			<b:Button ui:field="close"><ui:text from="{messages.closeButtonLabel}"/></b:Button>
		</b:ModalFooter>
	</b:Modal>
</ui:UiBinder>